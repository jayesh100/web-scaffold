@import '~app/assets/stylus'


.root
  line-height: 1.125

  h1
    margin-bottom: 16px
    font-size: 48px
    text-align: center

  p
    font-size: 18px
    text-indent: 2em

    &:not(:last-child)
      margin-bottom: 0.5em

.profile
  display: block
  width: 100%
  max-width: 320px
  border-radius: 50%
  margin: 0 auto 16px

  +from($sml)
    width: 50%
    margin-right: 16px
    float: left
