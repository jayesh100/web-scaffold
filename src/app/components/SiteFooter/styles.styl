@import '~app/assets/stylus'


.root
  background: $themeColor
  color: $backgroundColor
  propertyPadding('padding-top')
  propertyPadding('padding-bottom')

.column
  composes: column from 'app/assets/stylus/common.styl'

.wrapper
  display: flex
  flex-direction: row
  flex-wrap: wrap

.info
  flex: 0 0 100%

  +from($med)
    flex-basis: "calc((100% - %s) / 3)" % (2 * $medGutter)
    margin-right: $medGutter

    &:nth-child(3n)
      margin-right: 0

  +from($lge)
    flex-basis: "calc((100% - %s) / 4)" % (3 * $lgeGutter)
    margin-right: $lgeGutter

    &:nth-child(n)
      margin-right: $lgeGutter

    &:nth-child(4n)
      margin-right: 0

  +from($xlg)
    flex-basis: "calc((100% - %s) / 4)" % (3 * $xlgGutter)
    margin-right: $xlgGutter

    &:nth-child(n)
      margin-right: $xlgGutter
